    "remark": "",
    "ayaTranslation": [
        {
            "id": "1",
            "text": "waylun lilmu<u>th</u>affifiin<strong>a</strong>"
        },
        {
            "id": "2",
            "text": "<strong>al</strong>la<u>dz</u>iina i<u>dzaa</u> ikt<u>aa</u>luu 'al<u>aa</u> <strong>al</strong>nn<u>aa</u>si yastawfuun<strong>a</strong>"
        },
        {
            "id": "3",
            "text": "wa-i<u>dzaa</u> k<u>aa</u>luuhum aw wazanuuhum yukhsiruun<strong>a</strong>"
        },
        {
            "id": "4",
            "text": "al<u>aa</u> ya<u>zh</u>unnu ul<u>aa</u>-ika annahum mab'uutsuun<strong>a</strong>"
        },
        {
            "id": "5",
            "text": "liyawmin 'a<u>zh</u>iim<strong>in</strong>"
        },
        {
            "id": "6",
            "text": "yawma yaquumu <strong>al</strong>nn<u>aa</u>su lirabbi <strong>a</strong>l'<u>aa</u>lamiin<strong>a</strong>"
        },
        {
            "id": "7",
            "text": "kall<u>aa</u> inna kit<u>aa</u>ba <strong>a</strong>lfujj<u>aa</u>ri lafii sijjiin<strong>in</strong>"
        },
        {
            "id": "8",
            "text": "wam<u>aa</u> adr<u>aa</u>ka m<u>aa</u> sijjiin<strong>un</strong>"
        },
        {
            "id": "9",
            "text": "kit<u>aa</u>bun marquum<strong>un</strong>"
        },
        {
            "id": "10",
            "text": "waylun yawma-i<u>dz</u>in lilmuka<u>dzdz</u>ibiin<strong>a</strong>"
        },
        {
            "id": "11",
            "text": "<strong>al</strong>la<u>dz</u>iina yuka<u>dzdz</u>ibuuna biyawmi <strong>al</strong>ddiin<strong>i</strong>"
        },
        {
            "id": "12",
            "text": "<strong>al</strong>la<u>dz</u>iina yuka<u>dzdz</u>ibuuna biyawmi <strong>al</strong>ddiin<strong>i</strong>"
        },
        {
            "id": "13",
            "text": "i<u>dzaa</u> tutl<u>aa</u> 'alayhi <u>aa</u>y<u>aa</u>tun<u>aa</u> q<u>aa</u>la as<u>aath</u>iiru <strong>a</strong>l-awwaliin<strong>a</strong>"
        },
        {
            "id": "14",
            "text": "kall<u>aa</u> bal r<u>aa</u>na 'al<u>aa</u> quluubihim m<u>aa</u> k<u>aa</u>nuu yaksibuun<strong>a</strong>"
        },
        {
            "id": "15",
            "text": "kall<u>aa</u> innahum 'an rabbihim yawma-i<u>dz</u>in lama<u>h</u>juubuun<strong>a</strong>"
        },
        {
            "id": "16",
            "text": "tsumma innahum la<u>shaa</u>luu <strong>a</strong>lja<u>h</u>iim<strong>i</strong>"
        },
        {
            "id": "17",
            "text": "tsumma yuq<u>aa</u>lu h<u>aadzaa</u> <strong>al</strong>la<u>dz</u>ii kuntum bihi tuka<u>dzdz</u>ibuun<strong>a</strong>"
        },
        {
            "id": "18",
            "text": "kall<u>aa</u> inna kit<u>aa</u>ba <strong>a</strong>l-abr<u>aa</u>ri lafii 'illiyyiin<strong>a</strong>"
        },
        {
            "id": "19",
            "text": "wam<u>aa</u> adr<u>aa</u>ka m<u>aa</u> 'illiyyuun<strong>a</strong>"
