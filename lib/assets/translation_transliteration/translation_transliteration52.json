            "text": "fii raqqin mansyuur<strong>in</strong>"
        },
        {
            "id": "4",
            "text": "wa<strong>a</strong>lbayti <strong>a</strong>lma'muur<strong>i</strong>"
        },
        {
            "id": "5",
            "text": "wa<strong>al</strong>ssaqfi <strong>a</strong>lmarfuu'<strong>i</strong>"
        },
        {
            "id": "6",
            "text": "wa<strong>a</strong>lba<u>h</u>ri <strong>a</strong>lmasjuur<strong>i</strong>"
        },
        {
            "id": "7",
            "text": "inna 'a<u>dzaa</u>ba rabbika law<u>aa</u>qi'<strong>un</strong>"
        },
        {
            "id": "8",
            "text": "m<u>aa</u> lahu min d<u>aa</u>fi'<strong>in</strong>"
        },
        {
            "id": "9",
            "text": "yawma tamuuru <strong>al</strong>ssam<u>aa</u>u mawr<u>aa</u><strong>n</strong>"
        },
        {
            "id": "10",
            "text": "watasiiru <strong>a</strong>ljib<u>aa</u>lu sayr<u>aa</u><strong>n</strong>"
        },
        {
            "id": "11",
            "text": "fawaylun yawma-i<u>dz</u>in lilmuka<u>dzdz</u>ibiin<strong>a</strong>"
        },
        {
            "id": "12",
            "text": "<strong>al</strong>la<u>dz</u>iina hum fii khaw<u>dh</u>in yal'abuun<strong>a</strong>"
        },
        {
            "id": "13",
            "text": "yawma yuda''uuna il<u>aa</u> n<u>aa</u>ri jahannama da''<u>aa</u><strong>n</strong>"
        },
        {
            "id": "14",
            "text": "h<u>aadz</u>ihi <strong>al</strong>nn<u>aa</u>ru <strong>al</strong>latii kuntum bih<u>aa</u> tuka<u>dzdz</u>ibuun<strong>a</strong>"
        },
        {
            "id": "15",
            "text": "afasi<u>h</u>run h<u>aadzaa</u> am antum l<u>aa</u> tub<u>sh</u>iruun<strong>a</strong>"
        },
        {
            "id": "16",
            "text": "i<u>sh</u>lawh<u>aa</u> fa<strong>i</strong><u>sh</u>biruu aw l<u>aa</u> ta<u>sh</u>biruu saw<u>aa</u>un 'alaykum innam<u>aa</u> tujzawna m<u>aa</u> kuntum ta'maluun<strong>a</strong>"
        },
        {
            "id": "17",
            "text": "inna <strong>a</strong>lmuttaqiina fii jann<u>aa</u>tin wana'iim<strong>in</strong>"
        },
        {
            "id": "18",
            "text": "f<u>aa</u>kihiina bim<u>aa</u> <u>aa</u>t<u>aa</u>hum rabbuhum wawaq<u>aa</u>hum rabbuhum 'a<u>dzaa</u>ba <strong>a</strong>lja<u>h</u>iim<strong>i</strong>"
        },
        {
            "id": "19",
            "text": "kuluu wa<strong>i</strong>syrabuu hanii-an bim<u>aa</u> kuntum ta'maluun<strong>a</strong>"
        },
        {
            "id": "20",
            "text": "muttaki-iina 'al<u>aa</u> sururin ma<u>sh</u>fuufatin wazawwajn<u>aa</u>hum bi<u>h</u>uurin 'iin<strong>in</strong>"
        },
        {
            "id": "21",
            "text": "wa<strong>a</strong>lla<u>dz</u>iina <u>aa</u>manuu wa<strong>i</strong>ttaba'at-hum <u>dz</u>urriyyatuhum bi-iim<u>aa</u>nin al<u>h</u>aqn<u>aa</u> bihim <u>dz</u>urriyyatahum wam<u>aa</u> alatn<u>aa</u>hum min 'amalihim min syay-in kullu imri-in bim<u>aa</u> kasaba rahiin<strong>un</strong>"
        },
        {
            "id": "22",
            "text": "wa-amdadn<u>aa</u>hum bif<u>aa</u>kihatin wala<u>h</u>min mimm<u>aa</u> yasytahuun<strong>a</strong>"
        },
        {
            "id": "23",
            "text": "yatan<u>aa</u>za'uuna fiih<u>aa</u> ka/san l<u>aa</u> laghwun fiih<u>aa</u> wal<u>aa</u> ta/tsiim<strong>un</strong>"
        },
        {
            "id": "24",
            "text": "waya<u>th</u>uufu 'alayhim ghilm<u>aa</u>nun lahum ka-annahum lu/luun maknuun<strong>un</strong>"
        },
        {
            "id": "25",
            "text": "wa-aqbala ba'<u>dh</u>uhum 'al<u>aa</u> ba'<u>dh</u>in yatas<u>aa</u>-aluun<strong>a</strong>"
        },
        {
            "id": "26",
            "text": "q<u>aa</u>luu inn<u>aa</u> kunn<u>aa</u> qablu fii ahlin<u>aa</u> musyfiqiin<strong>a</strong>"
        },
        {
            "id": "27",
            "text": "famanna <strong>al</strong>l<u>aa</u>hu 'alayn<u>aa</u> wawaq<u>aa</u>n<u>aa</u> 'a<u>dzaa</u>ba <strong>al</strong>ssamuum<strong>i</strong>"
        },
        {
            "id": "28",
            "text": "inn<u>aa</u> kunn<u>aa</u> min qablu nad'uuhu innahu huwa <strong>a</strong>lbarru <strong>al</strong>rra<u>h</u>iim<strong>u</strong>"
        },
        {
            "id": "29",
            "text": "fa<u>dz</u>akkir fam<u>aa</u> anta bini'mati rabbika bik<u>aa</u>hin wal<u>aa</u> majnuun<strong>in</strong>"
        },
        {
            "id": "30",
            "text": "am yaquuluuna sy<u>aa</u>'irun natarabba<u>sh</u>u bihi rayba <strong>a</strong>lmanuun<strong>i</strong>"
        },
        {
            "id": "31",
            "text": "qul tarabba<u>sh</u>uu fa-innii ma'akum mina <strong>a</strong>lmutarabbi<u>sh</u>iin<strong>a</strong>"
        },
        {
            "id": "32",
            "text": "am ta/muruhum a<u>h</u>l<u>aa</u>muhum bih<u>aadzaa</u> am hum qawmun <u>th</u><u>aa</u>ghuun<strong>a</strong>"
        },
        {
            "id": "33",
            "text": "am yaquuluuna taqawwalahu bal l<u>aa</u> yu/minuun<strong>a</strong>"
        },
        {
            "id": "34",
            "text": "falya/tuu bi<u>h</u>adiitsin mitslihi in k<u>aa</u>nuu <u>shaa</u>diqiinaa"
        },
        {
            "id": "35",
            "text": "am khuliquu min ghayri syay-in am humu <strong>a</strong>lkh<u>aa</u>liquun<strong>a</strong>"
        },
        {
            "id": "36",
            "text": "am khalaquu <strong>al</strong>ssam<u>aa</u>w<u>aa</u>ti wa<strong>a</strong>l-ar<u>dh</u>a bal l<u>aa</u> yuuqinuun<strong>a</strong>"
        },
        {
            "id": "37",
            "text": "am 'indahum khaz<u>aa</u>-inu rabbika am humu <strong>a</strong>lmu<u>sh</u>ay<u>th</u>iruun<strong>a</strong>"
        },
        {
            "id": "38",
            "text": "am lahum sullamun yastami'uuna fiihi falya/ti mustami'uhum bisul<u>th</u><u>aa</u>nin mubiin<strong>in</strong>"
        },
        {
            "id": "39",
            "text": "am lahu <strong>a</strong>lban<u>aa</u>tu walakumu <strong>a</strong>lbanuun<strong>a</strong>"
        },
        {
            "id": "40",
            "text": "am tas-aluhum ajran fahum min maghramin mutsqaluun<strong>a</strong>"
        },
        {
            "id": "41",
            "text": "am 'indahumu <strong>a</strong>lghaybu fahum yaktubuun<strong>a</strong>"
        },
        {
            "id": "42",
            "text": "am yuriiduuna kaydan fa<strong>a</strong>lla<u>dz</u>iina kafaruu humu <strong>a</strong>lmakiiduun<strong>a</strong>"
        },
        {
            "id": "43",
            "text": "am lahum il<u>aa</u>hun ghayru <strong>al</strong>l<u>aa</u>hi sub<u>haa</u>na <strong>al</strong>l<u>aa</u>hi 'amm<u>aa</u> yusyrikuun<strong>a</strong>"
        },
        {
            "id": "44",
            "text": "wa-in yaraw kisfan mina <strong>al</strong>ssam<u>aa</u>-i s<u>aa</u>qi<u>th</u>an yaquuluu sa<u>haa</u>bun markuum<strong>un</strong>"
        },
        {
            "id": "45",
            "text": "fa<u>dz</u>arhum <u>h</u>att<u>aa</u> yul<u>aa</u>quu yawmahumu <strong>al</strong>la<u>dz</u>ii fiihi yu<u>sh</u>'aquun<strong>a</strong>"
        },
        {
            "id": "46",
            "text": "yawma l<u>aa</u> yughnii 'anhum kayduhum syay-an wal<u>aa</u> hum yun<u>sh</u>aruun<strong>a</strong>"
        },
        {
            "id": "47",
            "text": "wa-inna lilla<u>dz</u>iina <u>zh</u>alamuu 'a<u>dzaa</u>ban duuna <u>dzaa</u>lika wal<u>aa</u>kinna aktsarahum l<u>aa</u> ya'lamuun<strong>a</strong>"
        },
        {
            "id": "48",
            "text": "wa<strong>i</strong><u>sh</u>bir li<u>h</u>ukmi rabbika fa-innaka bi-a'yunin<u>aa</u> wasabbi<u>h</u> bi<u>h</u>amdi rabbika <u>h</u>iina taquum<strong>u</strong>"
        },
        {
            "id": "49",
            "text": "wamina <strong>al</strong>layli fasabbi<u>h</u>hu wa-idb<u>aa</u>ra <strong>al</strong>nnujuum<strong>i</strong>"
