        {
            "id": "20",
            "text": "kit<u>aa</u>bun marquum<strong>un</strong>"
        },
        {
            "id": "21",
            "text": "yasyhaduhu <strong>a</strong>lmuqarrabuun<strong>a</strong>"
        },
        {
            "id": "22",
            "text": "inna <strong>a</strong>l-abr<u>aa</u>ra lafii na'iim<strong>in</strong>"
        },
        {
            "id": "23",
            "text": "'al<u>aa</u> <strong>a</strong>l-ar<u>aa</u>-iki yan<u>zh</u>uruun<strong>a </strong>"
        },
        {
            "id": "24",
            "text": "ta'rifu fii wujuuhihim na<u>dh</u>rata <strong>al</strong>nna'iim<strong>i</strong>"
